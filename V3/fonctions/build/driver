#####################################################################################################################################################################
# Broadcom-wl #
###############
broadcom_wl(){
wget https://europe.mirror.pkgbuild.com/community/os/x86_64/broadcom-wl-6.30.223.271-446-x86_64.pkg.tar.zst -O $DIR/repo/broadcom-wl.pkg.tar.zst;
}

