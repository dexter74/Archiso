###################################################################################################################
# Configuration de la langue (X11 inclus) #
###########################################
LANGUE(){
  mkdir -p                                  $DIR/profil/airootfs/etc/X11/xorg.conf.d/;
  cp /etc/locale.conf                       $DIR/profil/airootfs/etc/locale.conf;
  cp /etc/locale.gen                        $DIR/profil/airootfs/etc/locale.gen;
  cp /etc/X11/xorg.conf.d/00-keyboard.conf  $DIR/profil/airootfs/etc/X11/xorg.conf.d/00-keyboard.conf;
}
