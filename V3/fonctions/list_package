#######################################################################################################################################################################
# Ajout du Package Microsoft Edge #
###################################
package_microsoft(){

if [[ $(grep -L "microsoft" $DIR/profil/packages.x86_64) ]]; then
echo "microsoft-edge-stable-bin" >> $DIR/profil/packages.x86_64;
fi
}

#######################################################################################################################################################################
# Ajouter les pilotes #
#######################
package_drthrax(){
if [[ $(grep -L "^upd72020x-fw" $DIR/profil/packages.x86_64) ]]; then
echo "###########
# Pilotes #
###########
upd72020x-fw
ast-firmware
wd719x-firmware
linux-firmware-qlogic
aic94xx-firmware" >>  $DIR/profil/packages.x86_64;
fi
}
